<h1>My Bookings</h1>

<table>
  <thead>
    <tr>
      <th>Appointment</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= link_to booking.appointment.title, booking.appointment %></td>
        <td><%= booking.start_time.strftime("%I:%M %p") %></td>
        <td><%= booking.end_time.strftime("%I:%M %p") %></td>
        <td>
          <%= link_to "Cancel", booking, method: :delete, data: { confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
