<h1>New Booking</h1>

<%= form_for(@booking) do |f| %>
  <%= f.label :appointment_id %>
  <%= f.collection_select :appointment_id, Appointment.all, :id, :start_time %>

  <%= f.label :start_time %>
  <%= f.text_field :start_time, id: 'datepicker' %>

  <%= f.label :duration %>
  <%= f.number_field :duration %>

  <%= f.submit %>
<% end %>
